	&lt;item&gt;
		&lt;title&gt;Datadog and Snyk Launch GitHub Integration&lt;/title&gt;
		&lt;link&gt;https://aithority.com/it-and-devops/cloud/datadog-and-snyk-launch-github-integration/&lt;/link&gt;
					&lt;comments&gt;https://aithority.com/it-and-devops/cloud/datadog-and-snyk-launch-github-integration/#respond&lt;/comments&gt;
		
		&lt;dc:creator&gt;&lt;![CDATA[AIT News Desk]]&gt;&lt;/dc:creator&gt;
		&lt;pubDate&gt;Fri, 11 Dec 2020 11:29:29 +0000&lt;/pubDate&gt;
				&lt;category&gt;&lt;![CDATA[Cloud]]&gt;&lt;/category&gt;
		&lt;category&gt;&lt;![CDATA[News]]&gt;&lt;/category&gt;
		&lt;category&gt;&lt;![CDATA[Datadog]]&gt;&lt;/category&gt;
		&lt;category&gt;&lt;![CDATA[GitHub]]&gt;&lt;/category&gt;
